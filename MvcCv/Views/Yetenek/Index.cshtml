@using MvcCv.Models.Entity
@model List<tbl_Yeteneklerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ string renk = "";}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Yetenek Listem</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <a href="/Yetenek/YeniYetenek/" class="btn btn-success">Yetenek Ekle</a>
                                <br />
                                <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Yetenek</th>
                                            <th>Derece</th>
                                            <th style="width: 40px">Oran</th>
                                            <th>Düzenle</th>
                                            <th>Sil</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var x in Model)
                                        {
                                            if (x.Oran >= 0 && x.Oran <= 50)
                                            {
                                                renk = "progress-bar bg-danger";
                                            }
                                            if (x.Oran >= 51 && x.Oran <= 71)
                                            {
                                                renk = "progress-bar bg-warning";
                                            }
                                            if (x.Oran >= 72 && x.Oran <= 84)
                                            {
                                                renk = "progress-bar bg-primary";
                                            }
                                            if (x.Oran >= 85 && x.Oran <= 100)
                                            {
                                                renk = "progress-bar bg-success";
                                            }
                                        <tr>
                                            <td>@x.Id.</td>
                                            <td>@x.Yetenek</td>
                                            <td>
                                                <div class="progress progress-xs">
                                                    <div class="@renk" style="width: @x.Oran%"></div>
                                                </div>
                                            </td>
                                            <td><span class="@renk">@x.Oran%</span></td>
                                            <td>
                                                <a class="btn btn-info btn-sm" href="/Yetenek/YetenekDuzenle/@x.Id/">
                                                    <i class="fas fa-pencil-alt"></i>
                                                    Düzenle
                                                </a>
                                            </td>

                                            <td>
                                                <a class="btn btn-danger btn-sm" href="/Yetenek/YetenekSil/@x.Id/">
                                                    <i class="fas fa-trash"></i>
                                                    Sil
                                                </a>
                                            </td>

                                        </tr>

                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
</body>
</html>