@using MvcCv.Models.Entity @*Burada da Entity klasörümü çagırdım. Çünkü içindekilere erişmem gerekecek.*@
@model List<tbl_Hakkimda>
   @*Hakkımda tablosunu bana liste şeklinde getir*@
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Resume - Start Bootstrap Theme</title>

    <!-- Bootstrap core CSS -->
    <link href="/resume-bootstrap4-master/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template -->
    <link href="https://fonts.googleapis.com/css?family=Saira+Extra+Condensed:100,200,300,400,500,600,700,800,900" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet">
    <link href="/resume-bootstrap4-master/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="/resume-bootstrap4-master/vendor/devicons/css/devicons.min.css" rel="stylesheet">
    <link href="/resume-bootstrap4-master/vendor/simple-line-icons/css/simple-line-icons.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/resume-bootstrap4-master/css/resume.min.css" rel="stylesheet">

</head>

<body id="page-top">

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top" id="sideNav">
        <a class="navbar-brand js-scroll-trigger" href="#page-top">
            <span class="d-block d-lg-none">Start Bootstrap</span>
            <span class="d-none d-lg-block">
                @foreach (var item in Model)
                {
                <img class="img-fluid img-profile rounded-circle mx-auto mb-2" src="@item.Resim" alt="">
                }
            </span>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#about">Hakkımda</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#experience">Deneyimlerim</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#education">Eğitim Hayatım</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#skills">Yeteneklerim</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#interests">Hobilerim</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#awards">Sertifikalarım</a>
                </li><li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#contant">İletişim</a>
                </li>

            </ul>
        </div>
    </nav>

    <div class="container-fluid p-0">
        @foreach (var x in Model)// Model de dön tuttugunu x'e at.
        {
            <section class="resume-section p-3 p-lg-5 d-flex d-column" id="about">
                <div class="my-auto">
                    <h1 class="mb-0">
                        @x.Ad
                        <span class="text-primary">@x.Soyad</span>
                    </h1>
                    <br />
                    <div class="subheading mb-5">
                        @x.Adres · @x.Telefon ·
                        <a href="mailto:name@email.com">@x.Mail</a>
                    </div>
                    <p class="mb-5">@x.Aciklama.</p>
                    @Html.Action("SosyalMedya")
                </div>
            </section>
        }

        <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="experience">
            @Html.Action("Deneyim") @*Burası Deneyim PartialViewden gelecek*@
        </section>

        <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="education">
            @Html.Action("Egitim")  @*Burası Egitim PartialViewden gelecek*@
        </section>

        <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="skills">
            @Html.Action("Yetenek")
        </section>

        <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="interests">
            @Html.Action("Hobi")
        </section>

        <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="awards">
            @Html.Action("Sertifika")
        </section>

        <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="contant">
            @Html.Action("iletisim")
        </section>

    </div>

    <!-- Bootstrap core JavaScript -->
    <script src="/resume-bootstrap4-master/vendor/jquery/jquery.min.js"></script>
    <script src="/resume-bootstrap4-master/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="/resume-bootstrap4-master/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for this template -->
    <script src="/resume-bootstrap4-master/js/resume.min.js"></script>

</body>

</html>

